<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffecb3"
        android:orientation="vertical"
        tools:context=".ViewPost">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postID"
            android:text="1788366850235"
            android:visibility="invisible"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp"
            android:layout_gravity="start"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />


        <ImageView
            android:id="@+id/postImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="325dp"
            android:maxHeight="250dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_gravity="center"

            />
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/postTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextPrimary"
            android:textSize="22sp"
            android:text="Loading post title..."
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lowestBid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextPrimary"
                android:textSize="20sp"
                android:text="$60.00"

                />
            <View
                android:layout_width="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="match_parent"
                android:background="@color/colorDivider"
                />
            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24:00:00"
                android:textSize="20sp"
                android:textColor="@color/colorTextPrimary"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/BidButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Place Selling Bid"
            android:textSize="18sp"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <Button
            android:id="@+id/interestedButton"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="â™¡ Interested"
            android:textSize="18sp"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <View
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item description:"
            android:layout_marginLeft="30sp"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorTextPrimary"/>

        <TextView
            android:id="@+id/postDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:textSize="20sp"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginBottom="100dp"
            android:text="Loading item description..."
            />
    </LinearLayout>
</ScrollView>