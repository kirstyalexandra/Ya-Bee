<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#ffecb3"
    android:orientation="vertical"
    tools:context=".Profile">
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >
        <ImageView
            android:id="@+id/profilePicture"
            android:src="@mipmap/ic_launcher_round"
            android:layout_toStartOf="@+id/profileDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/profileDescription"
            />
        <TextView
            android:id="@+id/profileDescription"
            android:layout_marginLeft="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#757575"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:text="quicksell75"
            />
        <TextView
            android:id="@+id/satisfaction"
            android:layout_marginLeft="5dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#757575"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/profileDescription"
            android:text="97% positive satisfaction"
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"/>
    <Button
        android:id="@+id/productsImBuying"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button"
        android:text="Buying"
        android:textSize="22sp"
        android:textColor="#212121"
        />
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/productsImSelling"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button"
        android:text="Selling"
        android:textSize="22sp"
        android:textColor="#212121"
        />
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/productReviews"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button"
        android:text="Reviews"
        android:textSize="22sp"
        android:textColor="#212121"
        />
    <View
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/ratingsText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Ratings"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="#212121"
        android:textSize="22sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yabee_reviews"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yabee_reviews"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yabee_reviews"/>
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yabee_reviews"/>
    </LinearLayout>



</LinearLayout>